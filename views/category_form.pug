extends layout

block content

  h2= title

  form(method='POST')
    div.label-input-wrapper
      label(for='name') Name:
      input#name(type='text', name='name', value=(name === undefined ? '' : name)) 
    button(type='submit') Submit

  if (errors)
    ul
      for error in errors
        li!= error.msg

  if (category_exists)
    p Category already exists please delete before creating.
    a(href=`${category_exists.url}`) #{category_exists.name}
